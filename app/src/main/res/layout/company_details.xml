<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rr_my_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/trades_bg">

                    <ImageView
                        android:id="@+id/comp_logo"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/cmts_bg"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:layout_margin="15dp"
                        android:scaleType="fitXY" />


                    <TextView
                        android:id="@+id/comp_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/comp_logo"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/template_bt_red_bg"
                        android:drawableRight="@drawable/ic_star"
                        android:elevation="5dp"
                        android:textColor="@color/white"
                        android:gravity="center_horizontal"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/comp_address"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_below="@+id/comp_rating"
                        android:layout_margin="5dp"
                        android:elevation="5dp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textColor="#fff"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:id="@+id/tv_views_pages"
                        android:drawableLeft="@drawable/ic_looks"
                        android:textSize="12dp"
                        android:padding="10dp"
                        android:drawablePadding="1dp"
                        android:paddingEnd="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="15dp"
                        android:paddingTop="15dp"
                        android:textColor="@color/white"
                        android:layout_above="@+id/comp_rating"
                        android:layout_toRightOf="@+id/comp_logo"
                        android:layout_toEndOf="@+id/comp_logo" />

                    <TextView
                        android:id="@+id/comp_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_messge_review"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/ic_messge_review"
                        android:drawableTint="@color/white"
                        android:paddingEnd="5dp"
                        android:paddingLeft="25dp"
                        android:paddingRight="15dp"
                        android:paddingStart="25dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/textGray"
                        android:textSize="16dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignRight="@+id/comp_address"
                        android:layout_alignEnd="@+id/comp_address" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/com_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:drawablePadding="15dp"
                    android:elevation="4dp"
                    android:fontFamily="sans-serif-light"
                    android:paddingBottom="10dp"
                    android:paddingEnd="5dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="15dp"
                    android:paddingStart="25dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/dgrey"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/comp_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="10dp"
                    android:paddingEnd="5dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:drawablePadding="15dp"
                    android:elevation="5dp"
                    android:textColor="@color/dgrey"
                    android:textSize="14sp"/>


                <TextView
                    android:id="@+id/contact_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/ic_phonenumber"
                    android:drawablePadding="15dp"
                    android:drawableStart="@drawable/ic_phonenumber"
                    android:paddingBottom="10dp"
                    android:paddingEnd="5dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:elevation="5dp"
                    android:textColor="@color/dgrey"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/comp_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/ic_action_email"
                    android:drawablePadding="15dp"
                    android:drawableStart="@drawable/ic_action_email"
                    android:paddingBottom="10dp"
                    android:paddingEnd="5dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:elevation="5dp"
                    android:textColor="@color/dgrey"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/comp_fb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/ic_fb"
                    android:drawablePadding="15dp"
                    android:drawableStart="@drawable/ic_fb"
                    android:paddingBottom="10dp"
                    android:paddingEnd="5dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:elevation="5dp"
                    android:textColor="@color/dgrey"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/comp_twitter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/ic_twitter"
                    android:drawablePadding="15dp"
                    android:drawableStart="@drawable/ic_twitter"
                    android:paddingBottom="10dp"
                    android:paddingEnd="5dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:elevation="5dp"
                    android:textColor="@color/dgrey"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/comp_gplus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/ic_google"
                    android:drawablePadding="15dp"
                    android:drawableStart="@drawable/ic_google"
                    android:paddingBottom="10dp"
                    android:paddingEnd="5dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:elevation="5dp"
                    android:textColor="@color/dgrey"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/comp_website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:drawablePadding="15dp"
                    android:elevation="4dp"
                    android:fontFamily="sans-serif-light"
                    android:paddingBottom="10dp"
                    android:paddingEnd="5dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="15dp"
                    android:paddingStart="25dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/dgrey"
                    android:textSize="14dp"
                    android:visibility="gone"/>


            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
