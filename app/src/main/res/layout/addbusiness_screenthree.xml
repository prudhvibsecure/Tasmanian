<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:elevation="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <EditText
                android:id="@+id/addbus_fb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:fontFamily="sans-serif-light"
                android:inputType="text"
                android:padding="10dp"
                android:hint="https://www.facebook.com/name"
                android:singleLine="true"
                android:textColorHint="@color/textGray"
                android:textColor="@android:color/black"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/addbus_twt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:fontFamily="sans-serif-light"
                android:inputType="text"
                android:padding="10dp"
                android:hint="https://twitter.com/name"
                android:singleLine="true"
                android:textColorHint="@color/textGray"
                android:textColor="@android:color/black"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/addbus_gplus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:fontFamily="sans-serif-light"
                android:inputType="text"
                android:padding="10dp"
                android:hint="https://plus.google.com/name"
                android:singleLine="true"
                android:textColorHint="@color/textGray"
                android:textColor="@android:color/black"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/add_bus_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/template_bt_red_bg"
                android:padding="15dp"
                android:text="Finish"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>