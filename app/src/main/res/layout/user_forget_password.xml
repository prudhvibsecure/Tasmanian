<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/forget_txt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bs_dark_mine"
        android:elevation="5dp"
        android:gravity="center"
        android:text="Forgot Password"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/user_forget_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forget_txt"
        android:layout_margin="5dp"
        android:padding="5dp">

        <EditText
            android:id="@+id/user_forget_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:hint="Please Enter Username"
            android:inputType="text"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/submit_btn_forget"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/user_forget_txt"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:background="@drawable/template_bt_red_bg"
        android:elevation="10dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="Submit"
        android:textColor="#fff"
        android:textSize="16dp" />

</RelativeLayout>